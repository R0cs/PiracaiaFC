            <table style="width:100%">
                <thead>
                    <tr>
                        <th>Pos</th>
                        <th>Time</th>
                        <th>Pontos</th>
                        <th>Jogos</th>
                        <th>Vitórias</th>
                        <th>Empates</th>
                        <th>Derrotas</th>
                        <th>Gols</th>
                        <th>Gols 12</th>

                    </tr>
                </thead>

                <% for (time of torneio.times) { %>

                    <tr>
                        <th>Pos</th>
                        <th>
                            <%= time %>
                        </th>

                        <th>Pontos</th>
                        <th>Jogos</th>
                        <th>Vitórias</th>
                        <th>Empates</th>
                        <th>Derrotas</th>
                        <th>Gols</th>
                        <th>Gols 12</th>
                    </tr>
                    <% } %>


            </table>

        </div>
        <%- include('partials/footer')%>