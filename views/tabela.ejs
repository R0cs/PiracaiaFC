<%- include('partials/head')%>

    <%- include('partials/navbar')%>


        <div class="container">
            <h1>
                <%= torneio.nome %>
            </h1>
            <h4>Formato: <%= torneio.formato %> | Data de início: <%= torneio.dtInicio %> | Final: <%= torneio.dtFinal%>
            </h4>
            <hr>
