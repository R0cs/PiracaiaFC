<% layout('/layouts/boilerplate') %>

    <main class="container py-3">
        <div>
            <h1>
                <%= torneio.nome %>
            </h1>
            <h5>Formato: <%= torneio.formato %> | Data de início: <%= torneio.dtInicio %> | Final: <%= torneio.dtFinal%>
            </h5>
            <hr>
            <h3>Tabela de classificação</h3>
            <div class="table-responsive">
                <table class="table table-hover table-borderless" style="width:100%">
                    <thead>
                        <tr>
                            <th>Pos</th>
                            <th>Time</th>
                            <th>P</th>
                            <th>J</th>
                            <th>V</th>
                            <th>E</th>
                            <th>D</th>
                            <th>G</th>
                            <th>G12</th>

                        </tr>
                    </thead>


                    <% for (i=0; i < times.length ; i=i+1) { %>

                        <tr>
                            <th>
                                <%= i+1 %>
                            </th>
                            <th>
                                <%= times[i].nome %>
                            </th>

                            <th>
                                <%= times[i].pontos %>
                            </th>
                            <th>
                                <%= times[i].jogos %>
                            </th>
                            <th>
                                <%= times[i].vitorias %>
                            </th>
                            <th>
                                <%= times[i].empates %>
                            </th>
                            <th>
                                <%= times[i].derrotas %>
                            </th>
                            <th>
                                <%= times[i].gols %>
                            </th>
                            <th>
                                <%= times[i].gols12 %>
                            </th>
                        </tr>
                        <% } %>


                </table>
            </div>
        </div>
    </main>